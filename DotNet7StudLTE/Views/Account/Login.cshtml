@model Login

@{
    Layout = "";
    var transMessage = TempData["TransMessage"];
    var transError = TempData["TransError"];
 }




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Inventory Management | Log in</title>
    @Html.Partial("_BasicStyles")
</head>
<body class="hold-transition login-page">
<!--Display notification to the user-->
@section scripts
    {
    <script>
        $(document).ready(function () {
            if ('@TempData["message"]' != null && '@TempData["message"]' != "") {
                toastr.success('@TempData["message"]');
            }
            else if ('@TempData["error"]' != null && '@TempData["error"]' != "") {
                toastr.error('@TempData["error"]');
            }
            else { }
        });
    </script>
}

    <input type="hidden" id="transMessage" value="@transMessage" />
    <input type="hidden" id="transError" value="@transError" />
    <div class="login-box">

        <!-- /.login-logo -->
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a href="#" class="h1"><b>Stud</b>LTE</a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Sign in to start your session</p>

               <form  asp-route-returnurl="@ViewData["ReturnUrl"]" method="POST">

                    <div class="form-group has-feedback">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group has-feedback">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="row" style="float:right;">
                     
                        <!-- /.col -->
                        <div>
                            <button type="submit" class="btn btn-danger btn-block btn-flat"><i class="fas fa-sign-in-alt"></i> Log In</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.login-box -->
    @Html.Partial("_BasicScripts")
</body>
</html>

<script>
    $(document).ready(function () {

        var transMessage = $("#transMessage").val();
        var transError = $("#transError").val();

        if (transMessage) {
            toastr.success(transMessage);
        }
        else if (transError) {
            toastr.error(transError);
        }
    });
</script>
