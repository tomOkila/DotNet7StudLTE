@model IEnumerable<Student>
@{
    Layout = "_LayoutDashBoard";
    ViewData["IndexInfo"] = "Display all the students that have been registered in the system for tracking and management";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="../Dashboard/Index">Home</a></li>
                    <li class="breadcrumb-item active">Student List</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<div class="row">
    <!-- /.col -->
    <div class="col-md-12">

        <div class="box box-primary">
            <div class="card">
                <div class="card-header">
                    <h1 class="card-title">
                        <b><h4><i class="fas fa-user-graduate"></i> Inactive Student List</h4></b>
                    </h1>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th></th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FirstName)
                                </th>
                                <th class="hidden">
                                    @Html.DisplayNameFor(model => model.Surname)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Birthday)
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="tools">
                                            <a asp-action="SingleDetails" asp-route-id="@item.StudentID" class="btn btn-primary btn-xs"><i class="fa fa-list"></i></a>
                                        </div>

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirstName)
                                    </td>
                                    <td class="hidden">
                                        @Html.DisplayFor(modelItem => item.Surname)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Birthday)
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th></th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FirstName)
                                </th>
                                <th class="hidden">
                                    @Html.DisplayNameFor(model => model.Surname)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Birthday)
                                </th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
            <!-- /.box-body -->
            <div class="box-footer no-padding">
            </div>
        </div>
        <div class="callout callout-info">
            <h4><i class="fa fa-info"></i> Info:</h4>
            <p>
                @ViewBag.IndexInfo
            </p>
        </div>
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
<!-- DataTables -->
